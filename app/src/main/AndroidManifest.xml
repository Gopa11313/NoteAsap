        <activity android:name=".ui.uploadNotes.UploadNotesActivity" />
        <activity android:name=".ui.signUpViewModel.SignUpActivity" >

        </activity>
        <activity android:name=".ui.login.LoginActivity" >


        </activity>
        <activity android:name="com.example.noteasap.ui.thirdActivity.Third_Activity" />
        <activity android:name=".SecondActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>